  <script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '908503955892322',
      xfbml      : true,
      version    : 'v2.5'
    });

    FB.getLoginStatus(function(response) {
      if (response.status === 'connected') {
        document.getElementById('login-status').innerHTML = "Welcome, we're connected!";
      } else if (response.status === 'not_authorized') {
        document.getElementById('login-status').innerHTML = "You're not logged in."
      } else {
        document.getElementById('login-status').innerHTML = "You're not logged into Facebook."
      }
        ;
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));

    function testAPI() {
    console.log('Welcome!  Fetching your information.... ');
