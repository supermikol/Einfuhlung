<div><h4><%= @message.message %></h4></div>



<% if @message.sender_id == current_user.id %>
  <form action="/messages/<%=@message.id%>/delete" method="post">
    <input type="hidden" name="_method" value="PUT">
    <button type="submit" class="btn btn-default">Delete Your Post</button>
  </form>
<% else %>
  <a class="btn btn-default" href="/messages/<%=@message.id%>/reply" role="button">Show some love!</a>
<% end %>

